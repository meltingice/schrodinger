<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "Schrodinger" %></title>

  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag asset_path("application.css"), debug: (Rails.env.development? || Rails.env.test?) %>
  <%= render partial: 'layouts/fonts' %>

  <%= javascript_include_tag asset_path("vendor/modernizr.js") %>
  <%= javascript_include_tag asset_path("application.js") %>
</head>
<%= content_tag(:body, class: body_classes, data: {equalizer: ''}) do %>
  <%= yield %>
<% end %>
</html>
